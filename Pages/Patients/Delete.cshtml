@page "{id:int}"
@model HCAMiniEHR.Pages.Patients.DeleteModel

<h2>Delete Patient</h2>

<div class="alert alert-warning">
    <strong>Are you sure?</strong> This action cannot be undone.
</div>

<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.Patient.FullName</dd>

    <dt class="col-sm-3">Gender</dt>
    <dd class="col-sm-9">@Model.Patient.Gender</dd>

    <dt class="col-sm-3">Date of Birth</dt>
    <dd class="col-sm-9">
        @(Model.Patient.DateOfBirth.ToString("dd-MMM-yyyy") ?? "N/A")
    </dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Patient.PatientId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
